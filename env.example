# Configuration Open Banking - TrueLayer API
TRUELAYER_CLIENT_ID=your-truelayer-client-id
TRUELAYER_CLIENT_SECRET=your-truelayer-client-secret
TRUELAYER_REDIRECT_URI=http://localhost:3000/api/truelayer/callback

# Configuration de l'application
NEXT_PUBLIC_APP_NAME=OBA
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Configuration de sécurité
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Configuration des banques supportées (TrueLayer)
NEXT_PUBLIC_SUPPORTED_COUNTRIES=GB,IE,DE,FR,ES,IT,NL,BE,AT,PT

# Configuration des APIs externes (optionnel)
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Configuration de la base de données (optionnel)
# DATABASE_URL=postgresql://user:password@localhost:5432/openbank
# REDIS_URL=redis://localhost:6379

# Configuration des webhooks (optionnel)
# WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_URL=https://your-domain.com/api/webhooks 